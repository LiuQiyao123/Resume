/* pages/login/login.wxss */

.container {
  min-height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  font-size: 40rpx;
  color: var(--text-color);
}

.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-color);
}

.placeholder {
  width: 60rpx;
}

/* 登录内容区 */
.login-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 80rpx;
}

.login-info {
  width: 100%;
  text-align: center;
  margin-bottom: 60rpx;
}

.login-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.login-btn {
  width: 90% !important;
  background-color: var(--primary-color);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  padding: 20rpx 0;
  border-radius: 12rpx;
  margin: 0 auto 40rpx;
}

.login-btn::after {
  border: none;
}

.login-btn[loading] {
  background-color: var(--primary-color);
  color: #ffffff;
  opacity: 0.8;
}

.privacy-notice {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 40rpx;
}

.privacy-link {
  color: var(--primary-color);
} 