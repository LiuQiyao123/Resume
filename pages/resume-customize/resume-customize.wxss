/* pages/resume-customize/resume-customize.wxss */

.container {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
  position: relative;
  padding-bottom: 160rpx;
}

/* 进度条 */
.progress-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 10;
}

.progress-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
}

.step-dot {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background-color: #E0E0E0;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.step-text {
  font-size: 22rpx;
  color: var(--text-secondary);
  white-space: nowrap;
}

.progress-step.active .step-dot {
  background-color: var(--primary-color);
}

.progress-step.active .step-text {
  color: var(--primary-color);
  font-weight: 500;
}

.progress-line {
  flex: 1;
  height: 2rpx;
  background-color: #E0E0E0;
  position: relative;
  z-index: 1;
  margin: 0 10rpx;
  margin-bottom: 36rpx;
}

.progress-line.active {
  background-color: var(--primary-color);
}

/* 步骤容器 */
.step-container {
  flex: 1;
  padding: 30rpx;
}

.step-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 12rpx;
}

.step-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

/* 简历列表 */
.resume-list-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  min-height: 400rpx;
}

.resume-item {
  padding: 24rpx;
  border-radius: 8rpx;
  background-color: var(--bg-color);
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.resume-item.selected {
  background-color: var(--primary-light);
  border: 1rpx solid var(--primary-color);
}

.resume-content {
  flex: 1;
}

.resume-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 12rpx;
}

.resume-info {
  display: flex;
  flex-direction: column;
}

.resume-time, .resume-position {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 6rpx;
}

.resume-check {
  width: 40rpx;
  height: 40rpx;
}

.check-icon {
  width: 40rpx;
  height: 40rpx;
}

.empty-resume {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 30rpx;
}

.create-btn {
  width: 240rpx !important;
}

/* 表单样式 */
.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.required::before {
  content: '*';
  color: #F5222D;
  margin-right: 6rpx;
}

.form-input {
  height: 88rpx;
  background-color: var(--bg-color);
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

.form-textarea {
  width: 100%;
  height: 240rpx;
  background-color: var(--bg-color);
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: var(--text-color);
  box-sizing: border-box;
}

.textarea-counter {
  font-size: 24rpx;
  color: var(--text-light);
  text-align: right;
  margin-top: 10rpx;
}

/* 模板选择样式 */
.templates-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.template-item {
  width: calc(50% - 20rpx);
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.template-item.selected {
  border: 2rpx solid var(--primary-color);
}

.template-preview {
  width: 100%;
  height: 240rpx;
  margin-bottom: 16rpx;
}

.template-info {
  display: flex;
  flex-direction: column;
}

.template-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.template-tags {
  display: flex;
  flex-wrap: wrap;
}

.template-tag {
  font-size: 20rpx;
  color: var(--text-secondary);
  background-color: var(--bg-color);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.template-check {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.template-check .check-icon {
  width: 24rpx;
  height: 24rpx;
}

.optimization-cost {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
}

.cost-info, .credits-info {
  display: flex;
  align-items: center;
}

.cost-label, .credits-label {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.cost-value, .credits-value {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.credits-value.insufficient {
  color: var(--error-color);
}

/* 优化结果样式 */
.result-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
}

.result-item {
  margin-bottom: 30rpx;
}

.result-item:last-child {
  margin-bottom: 0;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 12rpx;
}

.result-content {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.result-improvements {
  display: flex;
  flex-direction: column;
}

.improvement-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.improvement-item:last-child {
  margin-bottom: 0;
}

.improvement-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.improvement-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  flex: 1;
}

.success-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.success-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--success-color);
}

/* 底部按钮 */
.footer-buttons {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid var(--border-color);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 20;
}

.footer-buttons .btn {
  width: 45% !important;
}

.footer-buttons .btn:only-child {
  width: 100% !important;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--primary-light);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-spinner.large {
  width: 80rpx;
  height: 80rpx;
  border-width: 6rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
  padding: 40rpx;
}

.loading-content .loading-spinner {
  border-color: rgba(255, 255, 255, 0.2);
  border-top-color: #fff;
}

.loading-content .loading-text {
  color: #fff;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 