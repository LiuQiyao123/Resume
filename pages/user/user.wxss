/* pages/user/user.wxss */

.container {
  min-height: 100vh;
  background-color: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 未登录状态 */
.no-login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.no-login-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.no-login-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.btn-login {
  width: 300rpx;
  height: 80rpx;
  background-color: #1890ff;
  color: #FFFFFF;
  border-radius: 40rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 用户信息头部 */
.user-header {
  background-color: #FFFFFF;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #EEEEEE;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999999;
}

.user-actions {
  display: flex;
}

.contact-btn {
  font-size: 24rpx;
  color: #1890ff;
  background-color: transparent;
  border: 1px solid #1890ff;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  line-height: 1.2;
  margin: 0;
}

.contact-btn::after {
  border: none;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.card-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.card-action {
  font-size: 24rpx;
  color: #999999;
}

/* 积分卡片 */
.points-card .card-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.points-amount {
  font-size: 60rpx;
  font-weight: 600;
  color: #1890ff;
}

.btn-recharge {
  font-size: 26rpx;
  color: #FFFFFF;
  background-color: #1890ff;
  border-radius: 30rpx;
  padding: 12rpx 30rpx;
  line-height: 1.2;
  margin: 0;
}

.btn-recharge::after {
  border: none;
}

.points-records {
  margin-top: 20rpx;
  border-top: 1px solid #F5F7FA;
  padding-top: 20rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.record-item:last-child {
  margin-bottom: 0;
}

.record-info {
  flex: 1;
}

.record-title {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 6rpx;
}

.record-time {
  font-size: 22rpx;
  color: #999999;
}

.record-amount {
  font-size: 28rpx;
  font-weight: 500;
}

.record-amount.income {
  color: #52c41a;
}

.record-amount.expense {
  color: #ff4d4f;
}

.no-records {
  text-align: center;
  color: #999999;
  font-size: 26rpx;
  padding: 20rpx 0;
}

/* 简历数量 */
.resume-count {
  font-size: 28rpx;
  color: #666666;
  padding: 10rpx 0;
}

/* 设置项 */
.settings-section {
  margin: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.settings-list {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #F5F7FA;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-left {
  display: flex;
  align-items: center;
}

.setting-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.setting-name {
  font-size: 28rpx;
  color: #333333;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

/* 退出登录 */
.logout-section {
  margin: 60rpx 30rpx 30rpx;
}

.btn-logout {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #FFFFFF;
  color: #ff4d4f;
  font-size: 28rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
} 