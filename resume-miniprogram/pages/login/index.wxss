/* pages/login/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 80rpx 50rpx;
  box-sizing: border-box;
  height: 100vh;
  background-color: #f7f8fa;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  margin-top: 30rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.login-section,
.phone-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn,
.phone-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  background-image: linear-gradient(to right, #1AAD19, #179B16);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.3);
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.login-tips {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #999;
}

.phone-prompt {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.skip-btn {
  margin-top: 30rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  background-color: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #07c160;
  margin: 0 8rpx;
  animation: dot-jump 1.4s infinite ease-in-out;
}

.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
}

.loading-dot:nth-child(3) {
  animation-delay: -0.32s;
}

@keyframes dot-jump {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1.0);
  }
}

.error-tip {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #fa5151;
}

.footer {
  font-size: 24rpx;
  color: #bbb;
} 