/* pages/points/points.wxss */

.container {
  background-color: var(--bg-color);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 积分头部 */
.points-header {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.points-card {
  background: linear-gradient(135deg, #3D6EF2 0%, #2850C8 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(45, 80, 200, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.username {
  font-size: 28rpx;
  color: #fff;
  opacity: 0.9;
}

.points-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 0 30rpx;
}

.points-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  opacity: 0.9;
}

.points-value {
  font-size: 72rpx;
  font-weight: bold;
}

.usage-tips {
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  opacity: 0.7;
}

/* 通用部分样式 */
.section {
  background-color: #fff;
  margin: 0 30rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 任务部分 */
.tasks-content {
  border-radius: 12rpx;
  overflow: hidden;
}

.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.task-item:last-child {
  border-bottom: none;
}

.task-info {
  display: flex;
  align-items: center;
}

.task-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 16rpx;
}

.task-icon image {
  width: 36rpx;
  height: 36rpx;
}

.login-task-icon {
  background-color: rgba(82, 196, 26, 0.1);
}

.share-task-icon {
  background-color: rgba(250, 173, 20, 0.1);
}

.ad-task-icon {
  background-color: rgba(245, 34, 45, 0.1);
}

.task-name {
  font-size: 28rpx;
  color: var(--text-color);
  margin-right: 16rpx;
}

.task-desc {
  font-size: 24rpx;
  color: var(--text-light);
}

.task-right {
  display: flex;
  align-items: center;
}

.task-points {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: bold;
  margin-right: 20rpx;
}

.task-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: transparent;
  line-height: 1.5;
}

button.task-status {
  margin: 0;
  border: none;
}

button.task-status::after {
  border: none;
}

.task-todo {
  background-color: var(--primary-light);
  color: var(--primary-color);
}

.task-completed {
  background-color: var(--bg-color);
  color: var(--text-light);
}

/* 套餐部分 */
.packages-content {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.package-item {
  width: calc(33.33% - 20rpx);
  margin: 0 10rpx 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid var(--border-color);
  position: relative;
  overflow: hidden;
}

.package-popular {
  border: 1rpx solid var(--primary-color);
}

.package-popular-tag {
  position: absolute;
  top: 0;
  right: 0;
  background-color: var(--primary-color);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-bottom-left-radius: 10rpx;
}

.package-header {
  margin-bottom: 16rpx;
}

.package-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 6rpx;
}

.package-points {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.package-price-info {
  margin-bottom: 16rpx;
}

.package-price {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-right: 8rpx;
}

.package-original-price {
  font-size: 24rpx;
  color: var(--text-light);
  text-decoration: line-through;
}

.package-buy-btn {
  text-align: center;
  padding: 10rpx 0;
  border-radius: 20rpx;
  font-size: 26rpx;
  background-color: var(--primary-light);
  color: var(--primary-color);
}

.package-popular .package-buy-btn {
  background-color: var(--primary-color);
  color: #fff;
}

/* 积分历史 */
.history-content {
  padding-bottom: 10rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.history-item:last-child {
  border-bottom: none;
}

.history-left {
  flex: 1;
}

.history-title {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 6rpx;
}

.history-time {
  font-size: 24rpx;
  color: var(--text-light);
}

.history-points {
  font-size: 30rpx;
  font-weight: bold;
}

.points-income {
  color: var(--primary-color);
}

.points-expense {
  color: var(--text-secondary);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-container.small {
  padding: 30rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--primary-light);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-container.small .loading-spinner {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  color: var(--text-light);
  font-size: 26rpx;
}

.loading-more .loading-spinner {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx 0 0;
}

.no-more {
  text-align: center;
  padding: 20rpx 0;
  color: var(--text-light);
  font-size: 26rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-light);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 