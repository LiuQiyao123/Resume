/* pages/index/index.wxss */

.container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: 40rpx;
}

/* 顶部信息 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.user-name {
  font-size: 28rpx;
  color: var(--text-color);
}

.login-text {
  color: var(--primary-color);
}

.logo-area {
  display: flex;
  align-items: center;
}

.logo {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.app-name {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
}

/* 横幅轮播 */
.banner-swiper {
  width: 100%;
  height: 240rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 快速功能入口 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.action-icon-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background-color: var(--primary-light);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
}

.action-name {
  font-size: 26rpx;
  color: var(--text-color);
}

/* 简历优化小贴士 */
.tips-container {
  margin: 0 30rpx 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tips-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
}

.tips-content {
  height: 80rpx;
}

.tips-swiper {
  height: 100%;
}

.tip-item {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 最近简历 */
.recent-resumes {
  margin: 0 30rpx 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
}

.view-all {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.arrow {
  margin-left: 4rpx;
  font-size: 24rpx;
}

.resumes-container {
  min-height: 120rpx;
}

.resume-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.resume-item:last-child {
  border-bottom: none;
}

.resume-info {
  flex: 1;
}

.resume-title {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.resume-time {
  font-size: 24rpx;
  color: var(--text-light);
}

.resume-arrow {
  color: var(--text-light);
}

.empty-resumes {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.empty-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 26rpx;
  color: var(--text-light);
}

.login-resumes {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.login-tip {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 20rpx;
}

.login-btn {
  width: 240rpx !important;
  height: 72rpx !important;
  line-height: 72rpx !important;
  font-size: 28rpx !important;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--primary-light);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 创建简历提示卡片 */
.create-resume-card {
  margin: 0 30rpx 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.card-content {
  position: relative;
  z-index: 2;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.card-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 30rpx;
}

.card-actions {
  display: flex;
}

.card-actions .btn {
  margin-right: 20rpx;
  font-size: 28rpx !important;
}

.card-bg {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 200rpx;
  height: 200rpx;
  opacity: 0.1;
  z-index: 1;
}

/* AI助手入口 */
.ai-assistant-card {
  margin: 0 30rpx;
  background: linear-gradient(135deg, #3D6EF2 0%, #2850C8 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(45, 80, 200, 0.2);
}

.ai-icon-container {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.ai-icon {
  width: 50rpx;
  height: 50rpx;
}

.ai-content {
  flex: 1;
}

.ai-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 6rpx;
}

.ai-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.ai-arrow {
  color: #fff;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 